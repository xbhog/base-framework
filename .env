NEXT_PUBLIC_SITE_URL=http://localhost:4000/

# Better Auth 配置
# 生成密钥: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-here
BETTER_AUTH_URL=http://localhost:4000

# Google OAuth 配置
# 获取方式: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database - Supabase PostgreSQL Connection
# 请前往 Supabase Dashboard > Settings > Database > Connection String
# 复制 "Connection Pooling" 的连接字符串（Transaction mode）
# 格式: postgresql://postgres.xkcidfrparcenvfnuyqm:[YOUR-PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres:your-password@your-host.supabase.co:5432/postgres"

# Cloudflare R2 存储配置
# R2 API 端点（S3 兼容）- 格式: https://<account-id>.r2.cloudflarestorage.com
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# R2 Access Key ID
R2_ACCESS_KEY_ID=your-r2-access-key-id
# R2 Secret Access Key
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
# R2 Bucket 名称（建议: bf-assets）
R2_BUCKET=bf-assets
# R2 公网访问基础 URL（可选：自定义域名或 R2 公网端点）
# 自定义域名示例: https://cdn.example.com
# R2 公网端点示例: https://pub-xxxxx.r2.dev
R2_PUBLIC_BASE_URL=https://your-r2-public-url
